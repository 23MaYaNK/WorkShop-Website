    /* Link Styling */
.sidebar ul li a {
  text-decoration: none;
  color: white;
  font-size: 18px;
  display: block;
  padding: 10px;
  position: relative; /* To position the pseudo-element */
  transition: color 0.3s ease; /* Smooth color change */
}

/* Add this for hover effect to spread the line from center */
.sidebar ul li a::after {
  content: '';
  position: absolute;
  bottom: 0; /* Place it at the bottom of the link */
  left: 50%; /* Start from the center */
  width: 0; /* Start with 0 width */
  height: 2px; /* Height of the underline */
  background-color: white; /* White underline */
  transition: width 0.3s ease, left 0.3s ease; /* Animate width and position */
}

/* On hover or when active, animate the line */
.sidebar ul li a:hover::after,
.sidebar ul li a.active::after {
  width: 100%; /* Expand to full width */
  left: 0; /* Move starting point to the left */
}

