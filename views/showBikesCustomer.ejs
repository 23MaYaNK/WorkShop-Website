            flex-direction: column;
            justify-content: space-between;
        }

        /* Hover effect: scale and box shadow */
        .vehicle-card:hover {
            transform: scale(1.05);
            box-shadow: 0 8px 16px rgba(0, 0, 0, 0.2);
        }

        /* Swiper container for images */
        .swiper-container {
            width: 100%;
            height: 200px;
            margin-bottom: 20px;
        }

        .swiper-slide {
            display: flex;
            align-items: center;
            justify-content: center;
        }

