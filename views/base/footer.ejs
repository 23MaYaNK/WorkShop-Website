    modeBtn.addEventListener('click', () => {
      body.classList.toggle('dark-mode');
      
      if (body.classList.contains('dark-mode')) {
        modeBtn.innerHTML = '‚òÄÔ∏è ';
      } else {
        modeBtn.innerHTML = 'üåô ';
      }
    });

    
// Get the mode button and the body element


// Function to apply the dark mode based on localStorage
const applyDarkMode = () => {
    const darkMode = localStorage.getItem('darkMode');
    if (darkMode === 'enabled') {
        body.classList.add('dark-mode');
        modeBtn.innerHTML = '‚òÄÔ∏è'; // Sun icon for light mode toggle
    } else {
        body.classList.remove('dark-mode');
        modeBtn.innerHTML = 'üåô'; // Moon icon for dark mode toggle
    }
};

// Apply dark mode on page load
applyDarkMode();

// Toggle dark/light mode when the button is clicked
modeBtn.addEventListener('click', () => {
    const darkMode = localStorage.getItem('darkMode');
    
    if (darkMode !== 'enabled') {
        // Enable dark mode
        body.classList.add('dark-mode');
        localStorage.setItem('darkMode', 'enabled');
        modeBtn.innerHTML = '‚òÄÔ∏è';
    } else {
        // Disable dark mode
        body.classList.remove('dark-mode');
        localStorage.setItem('darkMode', 'disabled');
        modeBtn.innerHTML = 'üåô';
    }
});


