        }

        .service-card {
            position: relative;
            display: tra;
            width: 250px;
            height: 280px;
            background:none;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
            overflow: hidden;
            transition: transform 0.3s ease;
            margin: 2%;
            border-radius: 8px;            border: 2px solid #B22222;
        }

        .service-card:hover {
            transform: scale(1.05);
        }

        .service-image {
          align-items: center;
            width: 40%;
            height: 40%;
            object-fit: cover;
            border-radius: 50%;
            margin-bottom: 1%;
        }

        .service-content {
            padding: 5px;
            text-align: center;
        }

        .service-title {
