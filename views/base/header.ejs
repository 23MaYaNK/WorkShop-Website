            color: #FFF;
            border: none;
            cursor: pointer;
            transition: background-color 0.3s ease;
            border-radius: 8px;
        }

        .enquire-btn:hover {
            background-color: #FF4C4C;
            box-shadow: 0 0 15px 5px rgba(255, 0, 0, 0.6); /* Glowing effect */
        }

       
        /* Hover Effect */
        .service-card:hover .hover-shutter {
            top: 0;
        }

        .hover-shutter {
            position: absolute;
            top: 100%;
            left: 0;
            width: 100%;
            height: 100%;
            background-color: rgba(168, 60, 60, 0.8);
            transition: top 0.3s ease;
            display: flex;
            flex-direction: column;
            justify-content: center;
            align-items: center;
            color: rgb(13, 12, 12);
            text-align: center;
        }

        .hover-shutter p {
            font-size: 0.8em;
            margin-bottom: 10px;
            font-family:'Times New Roman', Times, serif;
            text-decoration: solid;
              }
